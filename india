#!/bin/bash

# Colors for font customization
RESET="\e[0m"
RED="\e[31m"
GREEN="\e[32m"
CYAN="\e[36m"

# Function to display the menu
display_menu() {
  echo -e "${GREEN}Choose an option to get information about India:${RESET}"
  echo "--------------------------------------------------"
  echo -e "${CYAN}1. Introduction of India${RESET}"
  echo -e "${CYAN}2. State and Capital of India${RESET}"
  echo -e "${CYAN}3. National Symbol of India${RESET}"
  echo -e "${CYAN}4. Presidents of India${RESET}"
  echo -e "${CYAN}5. Prime Ministers of India${RESET}"
  echo -e "${CYAN}6. Home Ministers of India${RESET}"
  echo -e "${CYAN}7. Mountains of India${RESET}"
  echo -e "${CYAN}8. Rivers of India${RESET}"
  echo -e "${CYAN}9. Volcanoes of India${RESET}"
  echo -e "${CYAN}10. Islands of India${RESET}"
  echo -e "${CYAN}11. Oceans of India${RESET}"
  echo -e "${CYAN}12. Seas of India${RESET}"
  echo -e "${CYAN}13. Nuclear Reactors of India${RESET}"
  echo -e "${CYAN}14. Satellites of India${RESET}"
  echo -e "${CYAN}15. Seasons of India${RESET}"
  echo -e "${CYAN}16. Famous Festivals of India${RESET}"
  echo -e "${RED}17. Exit${RESET}"
  echo "--------------------------------------------------"
}

# Function to handle menu choice
handle_choice() {
  case $1 in
    1)
      echo -e "${GREEN}Introduction of India:${RESET}"
      echo "India, officially the Republic of India, is a country located in South Asia..."
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    # Other options (2-15) remain unchanged here
    # Example of existing options truncated for brevity
    16)
      echo -e "${CYAN}Famous Festivals of India:${RESET}"
      echo "India is known for its diverse culture, and festivals are an integral part of its traditions. Here are some of the most famous festivals celebrated across the country:"
      echo "1. **Diwali**: Known as the Festival of Lights, celebrated to mark the return of Lord Rama to Ayodhya after defeating Ravana. Houses are decorated with lamps, candles, and rangoli."
      echo "2. **Holi**: The Festival of Colors celebrates the victory of good over evil. People play with colored powders, water, and enjoy festive sweets like gujiya."
      echo "3. **Navratri/Durga Puja**: Celebrated to honor Goddess Durga, this festival includes fasting, prayers, and dance forms like Garba and Dandiya in Gujarat and Durga Puja in Bengal."
      echo "4. **Eid-ul-Fitr**: Celebrated by Muslims to mark the end of Ramadan, it involves prayers, feasting, and sharing meals with loved ones."
      echo "5. **Christmas**: Celebrated by Christians and others, it marks the birth of Jesus Christ. It includes decorating Christmas trees, attending church services, and exchanging gifts."
      echo "6. **Ganesh Chaturthi**: Dedicated to Lord Ganesha, this festival includes the installation of idols at homes and public places, followed by processions and immersion in water."
      echo "7. **Raksha Bandhan**: A festival that celebrates the bond between brothers and sisters. Sisters tie a rakhi (sacred thread) on their brothers' wrists in exchange for promises of protection."
      echo "8. **Pongal/Makar Sankranti**: Harvest festivals celebrated in Tamil Nadu and other parts of India, marking the transition of the Sun into the zodiac sign Capricorn."
      echo "9. **Onam**: Kerala’s harvest festival that celebrates King Mahabali's annual visit. It includes traditional feasts, boat races, and folk dances."
      echo "10. **Baisakhi**: Celebrated in Punjab, this festival marks the harvest season and the formation of the Khalsa in Sikhism."
      echo "11. **Dussehra**: Marks the victory of Lord Rama over Ravana, symbolizing the triumph of good over evil. It is celebrated with Ram Lila plays and effigy burning."
      echo "12. **Janmashtami**: Celebrates the birth of Lord Krishna with devotional songs, fasting, and the enactment of Krishna’s childhood antics."
      echo "13. **Guru Nanak Jayanti**: Marks the birth of Guru Nanak, the founder of Sikhism. It includes prayers, kirtans, and langar (community meals)."
      echo "14. **Mahashivratri**: Dedicated to Lord Shiva, devotees fast and offer prayers throughout the night."
      echo "15. **Bihu**: Assam's most celebrated festival, marking the Assamese New Year with dances and traditional feasts."
      echo "16. **Chhath Puja**: A festival in Bihar and UP dedicated to the Sun God, with rituals performed near rivers and ponds."
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    17)
      echo -e "${RED}Thank you! Exiting the program.${RESET}"
      exit 0
      ;;
    *)
      echo -e "${RED}Invalid option chosen! Please select a valid option.${RESET}"
      sleep 1
      ;;
  esac
}

# Main script loop
while true; do
  display_menu
  read -p "Enter your choice: " choice
  handle_choice $choice
  echo
done
