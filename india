#!/bin/bash

# Colors for font customization
RESET="\e[0m"
RED="\e[31m"
GREEN="\e[32m"
YELLOW="\e[33m"
BLUE="\e[34m"
MAGENTA="\e[35m"
CYAN="\e[36m"

# Function to display the menu
display_menu() {
  echo -e "${GREEN}Choose an option to get information about India:${RESET}"
  echo "--------------------------------------------------"
  echo -e "${CYAN}1. Introduction of India${RESET}"
  echo -e "${CYAN}2. State and Capital of India${RESET}"
  echo -e "${CYAN}3. National Symbol of India${RESET}"
  echo -e "${CYAN}4. Presidents of India${RESET}"
  echo -e "${CYAN}5. Prime Ministers of India${RESET}"
  echo -e "${CYAN}6. Home Ministers of India${RESET}"
  echo -e "${CYAN}7. Mountains of India${RESET}"
  echo -e "${CYAN}8. Rivers of India${RESET}"
  echo -e "${CYAN}9. Volcanoes of India${RESET}"
  echo -e "${CYAN}10. Islands of India${RESET}"
  echo -e "${CYAN}11. Oceans of India${RESET}"
  echo -e "${CYAN}12. Seas of India${RESET}"
  echo -e "${CYAN}13. Nuclear Reactors of India${RESET}"
  echo -e "${CYAN}14. Satellites of India${RESET}"
  echo -e "${CYAN}15. Seasons of India${RESET}"
  echo -e "${RED}16. Exit${RESET}"
  echo "--------------------------------------------------"
}

# Function to handle each menu choice
handle_choice() {
  case $1 in
    1)
      echo -e "${GREEN}Introduction of India:${RESET}"
      echo "India, officially the Republic of India, is a country in South Asia."
      echo "It is the seventh-largest country by land area, and the second-most populous country, with over 1.4 billion people."
      echo "India shares borders with Pakistan, China, Nepal, Bhutan, Bangladesh, and Myanmar, and has a coastline along the Indian Ocean."
      echo "The country has a rich cultural heritage and diverse traditions, languages, and religions. It is home to some of the world's oldest civilizations, including the Indus Valley Civilization."
      echo "India gained independence from British rule on August 15, 1947."
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    2)
      echo -e "${BLUE}States and Capitals of India:${RESET}"
      echo "India consists of 28 states and 8 Union Territories. Here is a list of all states and their capitals:"
      echo "Andhra Pradesh - Amaravati"
      echo "Arunachal Pradesh - Itanagar"
      echo "Assam - Dispur"
      echo "Bihar - Patna"
      echo "Chhattisgarh - Raipur"
      echo "Goa - Panaji"
      echo "Gujarat - Gandhinagar"
      echo "Haryana - Chandigarh"
      echo "Himachal Pradesh - Shimla"
      echo "Jharkhand - Ranchi"
      echo "Karnataka - Bengaluru"
      echo "Kerala - Thiruvananthapuram"
      echo "Madhya Pradesh - Bhopal"
      echo "Maharashtra - Mumbai"
      echo "Manipur - Imphal"
      echo "Meghalaya - Shillong"
      echo "Mizoram - Aizawl"
      echo "Nagaland - Kohima"
      echo "Odisha - Bhubaneswar"
      echo "Punjab - Chandigarh"
      echo "Rajasthan - Jaipur"
      echo "Sikkim - Gangtok"
      echo "Tamil Nadu - Chennai"
      echo "Telangana - Hyderabad"
      echo "Uttar Pradesh - Lucknow"
      echo "Uttarakhand - Dehradun"
      echo "West Bengal - Kolkata"
      echo "Union Territories:"
      echo "Andaman and Nicobar Islands - Port Blair"
      echo "Chandigarh - Chandigarh"
      echo "Dadra and Nagar Haveli and Daman and Diu - Daman"
      echo "Lakshadweep - Kavaratti"
      echo "Delhi - New Delhi (National Capital Territory)"
      echo "Puducherry - Puducherry"
      echo "Ladakh - Leh"
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    # Similar content for options 3-15 with different color codes as per the earlier explanation
    16)
      echo -e "${RED}Thank you! Exiting the program.${RESET}"
      exit 0
      ;;
    *)
      echo -e "${RED}Invalid choice! Please select a valid option.${RESET}"
      ;;
  esac
}

# Main script logic
while true; do
  display_menu
  read -p "Enter your choice: " choice
  handle_choice $choice
  echo
done
