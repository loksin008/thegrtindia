#!/bin/bash

# Script for comprehensive information about India in Hindi

display_menu() {
  echo "भारत का परिचय प्राप्त करने के लिए विकल्प चुनें:"
  echo "----------------------------------------------------"
  echo "1. भारत का परिचय"
  echo "2. भारत के राष्ट्रीय दिवस"
  echo "3. भारत का भौतिक स्वरूप"
  echo "4. भारत के राष्ट्रपति"
  echo "5. भारत के प्रधानमंत्री"
  echo "6. भारत के गृहमंत्री"
  echo "7. भारत की नदियाँ"
  echo "8. भारत के पर्वत"
  echo "9. भारत के ज्वालामुखी"
  echo "10. भारत के द्वीप"
  echo "11. भारत के समुद्र और महासागर"
  echo "12. भारत के राज्य और उनकी राजधानी"
  echo "13. बाहर निकलें"
  echo "----------------------------------------------------"
}

handle_choice() {
  case $1 in
    1)
      echo "भारत का परिचय:"
      echo "भारत दक्षिण एशिया का एक विशाल और विविधतापूर्ण देश है। यह ऐतिहासिक धरोहर, संस्कृति और विविधता का प्रतीक है।"
      ;;
    2)
      echo "भारत के राष्ट्रीय दिवस:"
      echo "गणतंत्र दिवस - 26 जनवरी"
      echo "स्वतंत्रता दिवस - 15 अगस्त"
      echo "गांधी जयंती - 2 अक्टूबर"
      ;;
    3)
      echo "भारत का भौतिक स्वरूप:"
      echo "भारत का भौतिक स्वरूप पहाड़ों, मैदानों, रेगिस्तानों, तटीय क्षेत्रों और पठारों से मिलकर बना है।"
      ;;
    4)
      echo "भारत के राष्ट्रपति:"
      echo "डॉ. राजेंद्र प्रसाद (प्रथम राष्ट्रपति) से लेकर वर्तमान राष्ट्रपति का नाम यहाँ अपडेट करें।"
      ;;
    5)
      echo "भारत के प्रधानमंत्री:"
      echo "पंडित जवाहरलाल नेहरू (प्रथम प्रधानमंत्री) से लेकर वर्तमान प्रधानमंत्री का नाम यहाँ अपडेट करें।"
      ;;
    6)
      echo "भारत के गृहमंत्री:"
      echo "सरदार वल्लभभाई पटेल (प्रथम गृहमंत्री) से लेकर वर्तमान गृहमंत्री का नाम यहाँ अपडेट करें।"
      ;;
    7)
      echo "भारत की नदियाँ:"
      echo "गंगा, यमुना, ब्रह्मपुत्र, गोदावरी, नर्मदा, कावेरी, सतलज आदि।"
      ;;
    8)
      echo "भारत के पर्वत:"
      echo "हिमालय, अरावली, विंध्याचल, सह्याद्रि, नीलगिरी आदि।"
      ;;
    9)
      echo "भारत के ज्वालामुखी:"
      echo "बैरन द्वीप (सक्रिय ज्वालामुखी) अंडमान निकोबार में स्थित है।"
      ;;
    10)
      echo "भारत के द्वीप:"
      echo "अंडमान और निकोबार द्वीपसमूह, लक्षद्वीप।"
      ;;
    11)
      echo "भारत के समुद्र और महासागर:"
      echo "हिंद महासागर, अरब सागर और बंगाल की खाड़ी।"
      ;;
    12)
      echo "भारत के राज्य और उनकी राजधानी:"
      echo "उत्तर प्रदेश - लखनऊ"
      echo "महाराष्ट्र - मुंबई"
      echo "तमिलनाडु - चेन्नई"
      echo "और अन्य राज्यों की सूची।"
      ;;
    13)
      echo "धन्यवाद! कार्यक्रम से बाहर निकल रहे हैं।"
      exit 0
      ;;
    *)
      echo "गलत विकल्प! कृपया सही विकल्प चुनें।"
      ;;
  esac
}

# Main script logic
while true; do
  display_menu
  read -p "अपना विकल्प दर्ज करें: " choice
  handle_choice $choice
  echo
done
