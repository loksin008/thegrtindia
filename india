    echo "4. Rajiv Gandhi (1984–1989)"
    echo "5. Atal Bihari Vajpayee (1996, 1998–2004)"
    echo "6. Narendra Modi (2014–Present)"
    echo "****************************************************"
    echo "Press Enter to go back."
    read
    return
  done
}

