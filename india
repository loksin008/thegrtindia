  done
}

# Function to display all National Symbols of India
national_symbols_of_india() {
  while true; do
    echo "****************************************************"
    echo "            National Symbols of India"
    echo "****************************************************"
    echo "1. National Flag: Tricolor with saffron, white, and green, and a navy blue Ashoka Chakra."
    echo "2. National Anthem: Jana Gana Mana."
    echo "3. National Song: Vande Mataram."
    echo "4. National Flower: Lotus."
    echo "5. National Tree: Banyan."
    echo "6. National Animal: Bengal Tiger."
    echo "7. National Bird: Indian Peacock."
    echo "8. National Sport: Field Hockey."
    echo "9. National Currency: Indian Rupee (INR)."
    echo "10. National Emblem: The Lion Capital of Ashoka."
    echo "11. National Fruit: Mango."
    echo "12. National Reptile: King Cobra."
    echo "13. National Aquatic Animal: Ganges River Dolphin."
    echo "14. National Heritage Animal: Indian Elephant."
    echo "15. National Vegetable: Pumpkin."
    echo "****************************************************"
    echo "Press Enter to go back."
    read
    return
  done
}

# Function to display Tribes of India and their states
tribes_of_india() {
  while true; do
    echo "****************************************************"
    echo "                Tribes of India and Their States"
    echo "****************************************************"
    echo "1. Santhals - Jharkhand, Odisha, Bihar, West Bengal"
    echo "2. Gonds - Madhya Pradesh, Maharashtra, Odisha"
    echo "3. Bhils - Rajasthan, Gujarat, Madhya Pradesh"
    echo "4. Meenas - Rajasthan"
    echo "5. Nagas - Nagaland"
    echo "6. Konyaks - Nagaland"
    echo "7. Todas - Tamil Nadu"
    echo "8. Bodos - Assam"
    echo "9. Khasi - Meghalaya"
    echo "10. Mishing - Assam"
    echo "11. Warli - Maharashtra, Gujarat"
    echo "12. Sikkimese Lepcha - Sikkim"
    echo "13. Bakarwals - Jammu & Kashmir"
    echo "14. Chakmas - Mizoram"
    echo "****************************************************"
    echo "Press Enter to go back."
    read
    return
  done
}

# Function to display Union Territories of India
union_territories_of_india() {
  while true; do
    echo "****************************************************"
    echo "                Union Territories of India"
    echo "****************************************************"
    echo "1. Andaman and Nicobar Islands"
    echo "2. Chandigarh"
    echo "3. Dadra and Nagar Haveli and Daman and Diu"
    echo "4. Lakshadweep"
    echo "5. Delhi"
    echo "6. Puducherry"
    echo "****************************************************"
    echo "Press Enter to go back."
    read
    return
  done
}

# Main Menu
while true; do
  echo ""
  echo "****************************************************"
  echo "               Welcome to India Info"
  echo "****************************************************"
  echo "Please select an option:"
  echo "1. Introduction to India"
  echo "2. Rivers of India"
  echo "3. Mountains of India"
  echo "4. Volcanoes of India"
  echo "5. Prime Ministers of India"
  echo "6. Home Ministers of India"
  echo "7. Presidents of India"
  echo "8. National Symbols of India"
  echo "9. Union Territories of India"
  echo "10. Tribes of India"
  echo "11. Exit"
  echo "****************************************************"
  read -p "Enter your choice [1-11]: " choice

  case $choice in
    1) intro_india ;;
    2) rivers_of_india ;;
    3) mountains_of_india ;;
    4) volcanoes_of_india ;;
    5) prime_ministers_of_india ;;
    6) home_ministers_of_india ;;
    7) presidents_of_india ;;
    8) national_symbols_of_india ;;
    9) union_territories_of_india ;;
    10) tribes_of_india ;;
    11) echo "Exiting... Goodbye!" ; break ;;
    *) echo "Invalid choice! Please select a valid option." ;;
  esac
done
