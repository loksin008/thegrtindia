# Function for Rivers and Dams in India
rivers_and_dams() {
  while true; do
    echo "****************************************************"
    echo "               Rivers and Dams"
    echo "****************************************************"
    echo "1. Bhakra Nangal Dam (Sutlej River, Himachal Pradesh)"
    echo "2. Sardar Sarovar Dam (Narmada River, Gujarat)"
    echo "****************************************************"
    echo "Press Enter to go back."
    read
    return
  done
}

# Main Menu
while true; do
  echo ""
  echo "****************************************************"
  echo "               Welcome to India Info"
  echo "****************************************************"
  echo "Please select an option:"
  echo "1. Introduction to India"
  echo "2. Rivers of India"
  echo "3. Mountains of India"
  echo "4. Volcanoes of India"
  echo "5. Prime Ministers of India"
  echo "6. Home Ministers of India"
  echo "7. Presidents of India"
  echo "8. National Symbols of India"
  echo "9. Union Territories of India"
  echo "10. Tribes of India"
  echo "11. Nuclear Plants of India"
  echo "12. Rivers and Dams in India"
  echo "13. Exit"
  echo "****************************************************"
  read -p "Enter your choice [1-13]: " choice

  case $choice in
    1) intro_india ;;
    2) rivers_of_india ;;
    3) mountains_of_india ;;
    4) volcanoes_of_india ;;
    5) prime_ministers_of_india ;;
    6) home_ministers_of_india ;;
    7) presidents_of_india ;;
    8) national_symbols_of_india ;;
    9) union_territories_of_india ;;
    10) tribes_of_india ;;
    11) nuclear_plants_of_india ;;
    12) rivers_and_dams ;;
    13) echo "Exiting... Goodbye!" ; break ;;
    *) echo "Invalid choice! Please select a valid option." ;;
  esac
done
