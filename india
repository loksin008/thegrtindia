#!/bin/bash

# Function to display geographic introduction
intro_india() {
  while true; do
    echo "****************************************************"
    echo "                Introduction to India"
    echo "****************************************************"
    echo "India is a vast country located in South Asia."
    echo "Area: 3,287,263 square kilometers."
    echo "Neighboring Countries: Pakistan, China, Nepal, Bhutan, Bangladesh, and Myanmar."
    echo "Capital: New Delhi."
    echo "Largest City: Mumbai."
    echo "****************************************************"
    echo "1. Back to Main Menu"
    read -p "Enter your choice [1]: " choice
    if [ "$choice" -eq 1 ]; then
      return
    else
      echo "Invalid choice! Please try again."
    fi
  done
}

# Function to display rivers of India
rivers_of_india() {
  while true; do
    echo "****************************************************"
    echo "                  Rivers of India"
    echo "****************************************************"
    echo "1. Ganga: Sacred river, flows through northern India."
    echo "2. Yamuna: Tributary of the Ganga, flows through Delhi."
    echo "3. Brahmaputra: Major river in northeast India."
    echo "4. Godavari: Longest river in southern India."
    echo "5. Narmada: Flows westwards into the Arabian Sea."
    echo "6. Krishna and Kaveri: Key rivers in the south."
    echo "****************************************************"
    echo "1. Back to Main Menu"
    read -p "Enter your choice [1]: " choice
    if [ "$choice" -eq 1 ]; then
      return
    else
      echo "Invalid choice! Please try again."
    fi
  done
}

# Function to display mountains of India
mountains_of_india() {
  while true; do
    echo "****************************************************"
    echo "                Mountains of India"
    echo "****************************************************"
    echo "1. The Himalayas: Highest mountain range, includes Mount Everest and Kanchenjunga."
    echo "2. Aravalli Range: Oldest mountain range in India."
    echo "3. Western Ghats: UNESCO World Heritage Site, runs parallel to the western coast."
    echo "4. Eastern Ghats: Runs along the eastern coast."
    echo "5. Vindhya Range: Separates northern and southern India."
    echo "****************************************************"
    echo "1. Back to Main Menu"
    read -p "Enter your choice [1]: " choice
    if [ "$choice" -eq 1 ]; then
      return
    else
      echo "Invalid choice! Please try again."
    fi
  done
}

# Function to display volcanoes of India
volcanoes_of_india() {
  while true; do
    echo "****************************************************"
    echo "                Volcanoes of India"
    echo "****************************************************"
    echo "1. Barren Island Volcano: Only active volcano in South Asia, located in the Andaman Islands."
    echo "2. Narcondam Volcano: Dormant volcano in the Andaman Islands."
    echo "3. Dhinodhar Hills: Extinct volcano in Gujarat."
    echo "****************************************************"
    echo "1. Back to Main Menu"
    read -p "Enter your choice [1]: " choice
    if [ "$choice" -eq 1 ]; then
      return
    else
      echo "Invalid choice! Please try again."
    fi
  done
}

# Function to display all Prime Ministers of India
prime_ministers_of_india() {
  while true; do
    echo "****************************************************"
    echo "            Prime Ministers of India"
    echo "****************************************************"
    echo "1. Jawaharlal Nehru (1947–1964)"
    echo "2. Gulzarilal Nanda (1964, 1966 - Interim)"
    echo "3. Lal Bahadur Shastri (1964–1966)"
    echo "4. Indira Gandhi (1966–1977, 1980–1984)"
    echo "5. Morarji Desai (1977–1979)"
    echo "6. Charan Singh (1979–1980)"
    echo "7. Rajiv Gandhi (1984–1989)"
    echo "8. Vishwanath Pratap Singh (1989–1990)"
    echo "9. Chandra Shekhar (1990–1991)"
    echo "10. P. V. Narasimha Rao (1991–1996)"
    echo "11. Atal Bihari Vajpayee (1996, 1998–2004)"
    echo "12. H. D. Deve Gowda (1996–1997)"
    echo "13. I. K. Gujral (1997–1998)"
    echo "14. Manmohan Singh (2004–2014)"
    echo "15. Narendra Modi (2014–Present)"
    echo "****************************************************"
    echo "1. Back to Main Menu"
    read -p "Enter your choice [1]: " choice
    if [ "$choice" -eq 1 ]; then
      return
    else
      echo "Invalid choice! Please try again."
    fi
  done
}

# Main Menu
while true; do
  echo ""
  echo "****************************************************"
  echo "               Welcome to India Info"
  echo "****************************************************"
  echo "Please select an option:"
  echo "1. Introduction to India"
  echo "2. Rivers of India"
  echo "3. Mountains of India"
  echo "4. Volcanoes of India"
  echo "5. Prime Ministers of India"
  echo "6. Exit"
  echo "****************************************************"
  read -p "Enter your choice [1-6]: " choice

  case $choice in
    1) intro_india ;;
    2) rivers_of_india ;;
    3) mountains_of_india ;;
    4) volcanoes_of_india ;;
    5) prime_ministers_of_india ;;
    6) echo "Exiting... Goodbye!" ; break ;;
    *) echo "Invalid choice! Please select a valid option." ;;
  esac
done
