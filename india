#!/bin/bash

# Colors for text formatting
RESET="\e[0m"
RED="\e[31m"
GREEN="\e[32m"
CYAN="\e[36m"

# Function to display the main menu
display_menu() {
  echo -e "${GREEN}Welcome! Choose an option to get detailed information about India:${RESET}"
  echo "--------------------------------------------------"
  echo -e "${CYAN}1. Introduction of India${RESET}"
  echo -e "${CYAN}2. States and Capitals of India${RESET}"
  echo -e "${CYAN}3. National Symbols of India${RESET}"
  echo -e "${CYAN}4. Presidents of India${RESET}"
  echo -e "${CYAN}5. Prime Ministers of India${RESET}"
  echo -e "${CYAN}6. Home Ministers of India${RESET}"
  echo -e "${CYAN}7. Mountains of India${RESET}"
  echo -e "${CYAN}8. Rivers of India${RESET}"
  echo -e "${CYAN}9. Volcanoes of India${RESET}"
  echo -e "${CYAN}10. Islands of India${RESET}"
  echo -e "${CYAN}11. Oceans of India${RESET}"
  echo -e "${CYAN}12. Seas of India${RESET}"
  echo -e "${CYAN}13. Nuclear Reactors of India${RESET}"
  echo -e "${CYAN}14. Satellites of India${RESET}"
  echo -e "${CYAN}15. Seasons of India${RESET}"
  echo -e "${CYAN}16. Famous Festivals of India${RESET}"
  echo -e "${CYAN}17. Metro Cities of India${RESET}"
  echo -e "${RED}18. Exit${RESET}"
  echo "--------------------------------------------------"
}

# Function to handle user choice
handle_choice() {
  case $1 in
    1)
      echo -e "${CYAN}Introduction of India:${RESET}"
      echo "India, officially the Republic of India, is located in South Asia. It is the seventh-largest country by land area and the second-most populous country in the world, with over 1.4 billion people."
      echo "India is known for its diverse culture, languages, and traditions, with 22 officially recognized languages and hundreds of dialects. It gained independence on August 15, 1947."
      ;;
    2)
      echo -e "${CYAN}States and Capitals of India:${RESET}"
      echo "India has 28 states and 8 Union Territories. Here are some examples:"
      echo "1. Andhra Pradesh - Amaravati"
      echo "2. Assam - Dispur"
      echo "3. Gujarat - Gandhinagar"
      echo "4. Uttar Pradesh - Lucknow"
      echo "5. Delhi (Union Territory) - New Delhi"
      ;;
    3)
      echo -e "${CYAN}National Symbols of India:${RESET}"
      echo "1. National Flag: Tricolor with saffron, white, and green, featuring a 24-spoke Ashoka Chakra."
      echo "2. National Animal: Bengal Tiger."
      echo "3. National Bird: Peacock."
      echo "4. National Flower: Lotus."
      echo "5. National Tree: Banyan."
      ;;
    4)
      echo -e "${CYAN}Presidents of India:${RESET}"
      echo "India's first President was Dr. Rajendra Prasad (1950–1962). Recent Presidents include:"
      echo "1. Pranab Mukherjee (2012–2017)"
      echo "2. Ram Nath Kovind (2017–2022)"
      echo "3. Droupadi Murmu (2022–present)"
      ;;
    5)
      echo -e "${CYAN}Prime Ministers of India:${RESET}"
      echo "India's first Prime Minister was Jawaharlal Nehru (1947–1964). Recent Prime Ministers include:"
      echo "1. Atal Bihari Vajpayee (1998–2004)"
      echo "2. Manmohan Singh (2004–2014)"
      echo "3. Narendra Modi (2014–present)"
      ;;
    6)
      echo -e "${CYAN}Home Ministers of India:${RESET}"
      echo "1. Sardar Vallabhbhai Patel - The first Home Minister of India."
      echo "2. Amit Shah - The current Home Minister."
      ;;
    7)
      echo -e "${CYAN}Mountains of India:${RESET}"
      echo "1. Himalayas - Home to the world's highest peaks like Kanchenjunga."
      echo "2. Western Ghats - A UNESCO World Heritage Site."
      echo "3. Aravalli Range - One of the oldest mountain ranges."
      ;;
    8)
      echo -e "${CYAN}Rivers of India:${RESET}"
      echo "1. Ganga - Sacred river of India."
      echo "2. Yamuna - Tributary of the Ganga."
      echo "3. Brahmaputra - Known for its vast size."
      ;;
    9)
      echo -e "${CYAN}Volcanoes of India:${RESET}"
      echo "1. Barren Island - The only active volcano in India."
      echo "2. Narcondam - A dormant volcano."
      ;;
    10)
      echo -e "${CYAN}Islands of India:${RESET}"
      echo "1. Andaman and Nicobar Islands - Located in the Bay of Bengal."
      echo "2. Lakshadweep - Located in the Arabian Sea."
      ;;
    11)
      echo -e "${CYAN}Oceans of India:${RESET}"
      echo "India is surrounded by the Indian Ocean, Arabian Sea, and Bay of Bengal."
      ;;
    12)
      echo -e "${CYAN}Seas of India:${RESET}"
      echo "1. Andaman Sea"
      echo "2. Laccadive Sea"
      ;;
    13)
      echo -e "${CYAN}Nuclear Reactors of India:${RESET}"
      echo "1. Kudankulam Nuclear Power Plant - Tamil Nadu."
      echo "2. Tarapur Atomic Power Station - Maharashtra."
      ;;
    14)
      echo -e "${CYAN}Satellites of India:${RESET}"
      echo "India has launched satellites like Chandrayaan, Mangalyaan, and the GSAT series."
      ;;
    15)
      echo -e "${CYAN}Seasons of India:${RESET}"
      echo "India has four seasons: Summer, Monsoon, Autumn, and Winter."
      ;;
    16)
      echo -e "${CYAN}Famous Festivals of India:${RESET}"
      echo "1. Diwali - Festival of Lights."
      echo "2. Holi - Festival of Colors."
      echo "3. Eid - Celebrated by Muslims."
      echo "4. Christmas - Celebrated by Christians."
      echo "5. Durga Puja - Celebrated in Bengal."
      ;;
    17)
      echo -e "${CYAN}Metro Cities of India:${RESET}"
      echo "India's major metro cities include:"
      echo "1. Delhi - National Capital Region"
      echo "2. Mumbai - Financial capital of India"
      echo "3. Bangalore - IT hub of India"
      echo "4. Kolkata - Cultural capital of India"
      echo "5. Chennai - Major commercial and cultural center"
      echo "6. Hyderabad - Information technology and pharmaceuticals hub"
      echo "7. Pune - Education and IT hub"
      echo "8. Ahmedabad - Known for textiles and industrial hubs"
      echo "9. Jaipur - Known for its historic forts and palaces"
      echo "10. Surat - A major diamond processing and textile hub"
      echo "11. Lucknow - Known for its Nawabi culture"
      echo "12. Chandigarh - A union territory and modern city"
      ;;
    18)
      echo -e "${RED}Thank you for using the program! Exiting...${RESET}"
      exit 0
      ;;
    *)
      echo -e "${RED}Invalid option chosen! Please select a valid option.${RESET}"
      ;;
  esac
  echo "Press any key to return to the main menu..."
  read -n 1
}

# Main script loop
while true; do
  display_menu
  read -p "Enter your choice: " choice
  handle_choice $choice
done
