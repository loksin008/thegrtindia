#!/bin/bash

# Script for comprehensive information about India in English

display_menu() {
  echo "Choose an option to get information about India:"
  echo "--------------------------------------------------"
  echo "1. Introduction of India"
  echo "2. State and Capital of India"
  echo "3. National Symbol of India"
  echo "4. Presidents of India"
  echo "5. Prime Ministers of India"
  echo "6. Home Ministers of India"
  echo "7. Mountains of India"
  echo "8. Rivers of India"
  echo "9. Volcanoes of India"
  echo "10. Islands of India"
  echo "11. Oceans of India"
  echo "12. Seas of India"
  echo "13. Exit"
  echo "--------------------------------------------------"
  echo "Press 'b' to go back to the main menu."
}

handle_choice() {
  case $1 in
    1)
      echo "Introduction of India:"
      echo "India, officially the Republic of India, is a country in South Asia."
      echo "It is the seventh-largest country by land area, and the second-most populous country."
      echo "Its capital is New Delhi, and the largest city is Mumbai."
      ;;
    2)
      echo "States and Capitals of India:"
      echo "Andhra Pradesh - Amaravati"
      echo "Arunachal Pradesh - Itanagar"
      echo "Assam - Dispur"
      echo "Bihar - Patna"
      echo "Goa - Panaji"
      echo "Gujarat - Gandhinagar"
      echo "Haryana - Chandigarh"
      echo "Himachal Pradesh - Shimla"
      echo "Karnataka - Bengaluru"
      echo "Kerala - Thiruvananthapuram"
      echo "Madhya Pradesh - Bhopal"
      echo "Maharashtra - Mumbai"
      echo "Manipur - Imphal"
      echo "Meghalaya - Shillong"
      echo "Mizoram - Aizawl"
      echo "Nagaland - Kohima"
      echo "Odisha - Bhubaneswar"
      echo "Punjab - Chandigarh"
      echo "Rajasthan - Jaipur"
      echo "Sikkim - Gangtok"
      echo "Tamil Nadu - Chennai"
      echo "Telangana - Hyderabad"
      echo "Tripura - Agartala"
      echo "Uttar Pradesh - Lucknow"
      echo "Uttarakhand - Dehradun"
      echo "West Bengal - Kolkata"
      ;;
    3)
      echo "National Symbol of India:"
      echo "The national symbol of India is the Lion Capital of Ashoka."
      echo "It features four lions standing back-to-back, symbolizing power, courage, pride, and confidence."
      ;;
    4)
      echo "Presidents of India:"
      echo "Dr. Rajendra Prasad (1st President)"
      echo "Dr. Sarvepalli Radhakrishnan (2nd President)"
      echo "Dr. Zakir Husain (3rd President)"
      echo "Fakhruddin Ali Ahmed (5th President)"
      echo "Ram Nath Kovind (14th President)"
      # Add more Presidents as needed
      ;;
    5)
      echo "Prime Ministers of India:"
      echo "Jawaharlal Nehru (1st Prime Minister)"
      echo "Gulzarilal Nanda (Acting Prime Minister)"
      echo "Indira Gandhi (1st Female Prime Minister)"
      echo "Rajiv Gandhi (6th Prime Minister)"
      echo "Narendra Modi (14th Prime Minister)"
      # Add more Prime Ministers as needed
      ;;
    6)
      echo "Home Ministers of India:"
      echo "Sardar Vallabhbhai Patel (1st Home Minister)"
      echo "Indira Gandhi (2nd Home Minister)"
      echo "Lal Krishna Advani (Home Minister during 1998-2004)"
      echo "Rajnath Singh (Current Home Minister)"
      ;;
    7)
      echo "Mountains of India:"
      echo "Himalayas"
      echo "Aravalli Range"
      echo "Vindhya Range"
      echo "Sahyadri (Western Ghats)"
      echo "Nilgiri Hills"
      ;;
    8)
      echo "Rivers of India:"
      echo "Ganges"
      echo "Yamuna"
      echo "Brahmaputra"
      echo "Godavari"
      echo "Narmada"
      echo "Kaveri"
      echo "Sutlej"
      "Mahanadi"
      ;;
    9)
      echo "Volcanoes of India:"
      echo "Barren Island (Active Volcano in Andaman and Nicobar Islands)"
      ;;
    10)
      echo "Islands of India:"
      echo "Andaman and Nicobar Islands"
      echo "Lakshadweep Islands"
      ;;
    11)
      echo "Oceans of India:"
      echo "Indian Ocean"
      ;;
    12)
      echo "Seas of India:"
      echo "Arabian Sea"
      echo "Bay of Bengal"
      ;;
    13)
      echo "Thank you! Exiting the program."
      exit 0
      ;;
    b|B)
      return 1
      ;;
    *)
      echo "Invalid choice! Please select a valid option."
      ;;
  esac
}

# Main script logic
while true; do
  display_menu
  read -p "Enter your choice: " choice

  if [ "$choice" == "b" ] || [ "$choice" == "B" ]; then
    continue
  fi

  handle_choice $choice
  echo
done
