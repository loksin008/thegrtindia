#!/bin/bash

# Script for comprehensive information about India in English

display_menu() {
  echo "Choose an option to get information about India:"
  echo "--------------------------------------------------"
  echo "1. Introduction of India"
  echo "2. State and Capital of India"
  echo "3. National Symbol of India"
  echo "4. Presidents of India"
  echo "5. Prime Ministers of India"
  echo "6. Home Ministers of India"
  echo "7. Mountains of India"
  echo "8. Rivers of India"
  echo "9. Volcanoes of India"
  echo "10. Islands of India"
  echo "11. Oceans of India"
  echo "12. Seas of India"
  echo "13. Nuclear Reactors of India"
  echo "14. Satellites of India"
  echo "15. Seasons of India"
  echo "16. Exit"
  echo "--------------------------------------------------"
}

handle_choice() {
  case $1 in
    1)
      echo "Introduction of India:"
      echo "India, officially the Republic of India, is a country in South Asia."
      echo "It is the seventh-largest country by land area, and the second-most populous country, with over 1.4 billion people."
      echo "India shares borders with Pakistan, China, Nepal, Bhutan, Bangladesh, and Myanmar, and has a coastline along the Indian Ocean."
      echo "The country has a rich cultural heritage and diverse traditions, languages, and religions. It is home to some of the world's oldest civilizations, including the Indus Valley Civilization."
      echo "India gained independence from British rule on August 15, 1947."
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    2)
      echo "States and Capitals of India:"
      echo "India consists of 28 states and 8 Union Territories. Here is a list of all states and their capitals:"
      echo "Andhra Pradesh - Amaravati"
      echo "Arunachal Pradesh - Itanagar"
      echo "Assam - Dispur"
      echo "Bihar - Patna"
      echo "Chhattisgarh - Raipur"
      echo "Goa - Panaji"
      echo "Gujarat - Gandhinagar"
      echo "Haryana - Chandigarh"
      echo "Himachal Pradesh - Shimla"
      echo "Jharkhand - Ranchi"
      echo "Karnataka - Bengaluru"
      echo "Kerala - Thiruvananthapuram"
      echo "Madhya Pradesh - Bhopal"
      echo "Maharashtra - Mumbai"
      echo "Manipur - Imphal"
      echo "Meghalaya - Shillong"
      echo "Mizoram - Aizawl"
      echo "Nagaland - Kohima"
      echo "Odisha - Bhubaneswar"
      echo "Punjab - Chandigarh"
      echo "Rajasthan - Jaipur"
      echo "Sikkim - Gangtok"
      echo "Tamil Nadu - Chennai"
      echo "Telangana - Hyderabad"
      echo "Uttar Pradesh - Lucknow"
      echo "Uttarakhand - Dehradun"
      echo "West Bengal - Kolkata"
      echo "Union Territories:"
      echo "Andaman and Nicobar Islands - Port Blair"
      echo "Chandigarh - Chandigarh"
      echo "Dadra and Nagar Haveli and Daman and Diu - Daman"
      echo "Lakshadweep - Kavaratti"
      echo "Delhi - New Delhi (National Capital Territory)"
      echo "Puducherry - Puducherry"
      echo "Ladakh - Leh"
      echo "Lakshadweep - Kavaratti"
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    3)
      echo "National Symbol of India:"
      echo "The national symbol of India is the Lion Capital of Ashoka, which was adopted in 1950."
      echo "The emblem is based on the Lion Capital of Ashoka, a sculpture from the Maurya dynasty, dating back to 250 BCE."
      echo "It features four lions standing back-to-back, symbolizing power, courage, pride, and confidence."
      echo "The national motto 'Satyamev Jayate' (Truth Alone Triumphs) is inscribed on a ribbon beneath the lions."
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    4)
      echo "Presidents of India:"
      echo "India's first President was Dr. Rajendra Prasad, who served from 1950 to 1962."
      echo "The list of Presidents includes:"
      echo "1st - Dr. Rajendra Prasad"
      echo "2nd - Dr. Sarvepalli Radhakrishnan"
      echo "3rd - Dr. Zakir Husain"
      echo "4th - Fakhruddin Ali Ahmed"
      echo "5th - V. V. Giri"
      echo "6th - R. Venkataraman"
      echo "7th - Giani Zail Singh"
      echo "8th - R. Narayanan"
      echo "9th - Dr. K. R. Narayanan"
      echo "10th - Pratibha Patil"
      echo "11th - Pranab Mukherjee"
      echo "12th - Ram Nath Kovind (Current President)"
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    5)
      echo "Prime Ministers of India:"
      echo "The first Prime Minister of India was Jawaharlal Nehru, who served from 1947 to 1964."
      echo "The list of Prime Ministers includes:"
      echo "1st - Jawaharlal Nehru"
      echo "2nd - Lal Bahadur Shastri"
      echo "3rd - Indira Gandhi"
      echo "4th - Rajiv Gandhi"
      echo "5th - Vishwanath Pratap Singh"
      echo "6th - Chandra Shekhar"
      echo "7th - P. V. Narasimha Rao"
      echo "8th - Atal Bihari Vajpayee"
      echo "9th - Manmohan Singh"
      echo "10th - Narendra Modi (Current Prime Minister)"
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    6)
      echo "Home Ministers of India:"
      echo "The Home Minister of India is responsible for overseeing internal security, law and order, and the country's border protection."
      echo "Here are the Home Ministers of India:"
      echo "1st - Sardar Vallabhbhai Patel"
      echo "2nd - Indira Gandhi"
      echo "3rd - Lal Krishna Advani"
      echo "4th - P. Chidambaram"
      echo "5th - Rajnath Singh (Current Home Minister)"
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    7)
      echo "Mountains of India:"
      echo "India is home to some of the highest mountain ranges in the world, including the Himalayas."
      echo "Notable mountains include:"
      echo "1. Mount Kanchenjunga (8,586 meters) - The highest peak in India."
      echo "2. Mount Everest (8,848 meters) - Located in Nepal but part of the Himalayas."
      echo "3. Nanda Devi (7,816 meters) - The second-highest peak in India."
      echo "4. Annapurna Range"
      echo "5. Aravalli Range (Oldest mountain range)"
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    8)
      echo "Rivers of India:"
      echo "India is known for its major rivers which have been central to the culture and economy."
      echo "The most famous rivers include:"
      echo "1. Ganges (2,525 kilometers) - The holiest river for Hindus."
      echo "2. Yamuna (1,376 kilometers) - Major tributary of the Ganges."
      echo "3. Brahmaputra (2,900 kilometers) - Known for its immense size and flooding."
      echo "4. Godavari (1,465 kilometers) - Second longest river in India."
      echo "5. Narmada (1,312 kilometers) - Flows westward into the Arabian Sea."
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    9)
      echo "Volcanoes of India:"
      echo "India has several dormant and active volcanoes, mainly in the Andaman and Nicobar Islands."
      echo "Some of the known volcanoes are:"
      echo "1. Barren Island (Active) - Located in the Andaman and Nicobar Islands."
      echo "2. Narcondam Island (Dormant) - Also located in the Andaman Islands."
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    10)
      echo "Islands of India:"
      echo "India has two main island groups:"
      echo "1. Andaman and Nicobar Islands - Located in the Bay of Bengal, known for their biodiversity."
      echo "2. Lakshadweep Islands - Located in the Arabian Sea, known for their coral reefs."
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    11)
      echo "Oceans of India:"
      echo "India is surrounded by the following oceans:"
      echo "1. Indian Ocean"
      echo "2. Arabian Sea"
      echo "3. Bay of Bengal"
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    12)
      echo "Seas of India:"
      echo "The seas around India include:"
      echo "1. Andaman Sea - Surrounding the Andaman Islands."
      echo "2. Laccadive Sea - Located around the Lakshadweep Islands."
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    13)
      echo "Nuclear Reactors of India:"
      echo "India has several operational nuclear reactors, contributing to the country's energy production."
      echo "Some major reactors are:"
      echo "1. Tarapur Atomic Power Station - Maharashtra"
      echo "2. Kudankulam Nuclear Power Plant - Tamil Nadu"
      echo "3. Kakrapar Atomic Power Station - Gujarat"
      echo "4. Rajasthan Atomic Power Station - Rajasthan"
      echo "5. Kaiga Nuclear Power Plant - Karnataka"
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    14)
      echo "Satellites of India:"
      echo "India's space program is managed by ISRO (Indian Space Research Organisation), and it has launched many satellites."
      echo "Some important satellites include:"
      echo "1. Aryabhata"
      echo "2. GSAT series"
      echo "3. Cartosat series"
      echo "4. Chandrayaan"
      echo "5. Mangalyaan"
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    15)
      echo "Seasons of India:"
      echo "India experiences four distinct seasons:"
      echo "1. Summer (March to June): Hot and dry, with temperatures reaching over 40Â°C in many areas."
      echo "2. Monsoon (June to September): Rainy season with heavy rainfall from the southwest monsoon winds."
      echo "3. Autumn (October to November): Clear skies and moderate temperatures after the monsoon season."
      echo "4. Winter (December to February): Cold and dry, with temperatures dropping especially in the northern regions."
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    16)
      echo "Thank you! Exiting the program."
      exit 0
      ;;
    *)
      echo "Invalid choice! Please select a valid option."
      ;;
  esac
}

# Main script logic
while true; do
  display_menu
  read -p "Enter your choice: " choice
  handle_choice $choice
  echo
done
