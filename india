    echo "1. Dr. Rajendra Prasad (1950–1962)"
    echo "2. Dr. S. Radhakrishnan (1962–1967)"
    echo "3. Dr. Zakir Husain (1967–1969)"
    echo "4. V. V. Giri (1969–1974)"
    echo "5. Fakhruddin Ali Ahmed (1974–1977)"
    echo "6. Neelam Sanjiva Reddy (1977–1982)"
    echo "7. Giani Zail Singh (1982–1987)"
    echo "8. R. Venkataraman (1987–1992)"
    echo "9. Dr. A. P. J. Abdul Kalam (2002–2007)"
    echo "10. Pratibha Patil (2007–2012)"
    echo "11. Ram Nath Kovind (2017–2022)"
    echo "12. Droupadi Murmu (2022–Present)"
    echo "****************************************************"
