#!/bin/bash

# Function for Introduction to India
intro_india() {
  while true; do
    echo "****************************************************"
    echo "                Introduction to India"
    echo "****************************************************"
    echo "India is located in South Asia and is the seventh-largest country by area."
    echo "Capital: New Delhi."
    echo "Official Languages: Hindi and English."
    echo "Currency: Indian Rupee (INR)."
    echo "Neighboring Countries: Pakistan, China, Nepal, Bhutan, Bangladesh, and Myanmar."
    echo "****************************************************"
    echo "Press Enter to go back."
    read
    return
  done
}

# Function for Rivers of India
rivers_of_india() {
  while true; do
    echo "****************************************************"
    echo "                  Rivers of India"
    echo "****************************************************"
    echo "1. Ganga"
    echo "2. Yamuna"
    echo "3. Brahmaputra"
    echo "4. Godavari"
    echo "5. Krishna"
    echo "6. Kaveri"
    echo "****************************************************"
    echo "Press Enter to go back."
    read
    return
  done
}

