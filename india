#!/bin/bash

# Colors for font customization
RESET="\e[0m"
RED="\e[31m"
GREEN="\e[32m"
CYAN="\e[36m"

# Function to display the menu
display_menu() {
  echo -e "${GREEN}Choose an option to get information about India:${RESET}"
  echo "--------------------------------------------------"
  echo -e "${CYAN}1. Introduction of India${RESET}"
  echo -e "${CYAN}2. State and Capital of India${RESET}"
  echo -e "${CYAN}3. National Symbol of India${RESET}"
  echo -e "${CYAN}4. Presidents of India${RESET}"
  echo -e "${CYAN}5. Prime Ministers of India${RESET}"
  echo -e "${CYAN}6. Home Ministers of India${RESET}"
  echo -e "${CYAN}7. Mountains of India${RESET}"
  echo -e "${CYAN}8. Rivers of India${RESET}"
  echo -e "${CYAN}9. Volcanoes of India${RESET}"
  echo -e "${CYAN}10. Islands of India${RESET}"
  echo -e "${CYAN}11. Oceans of India${RESET}"
  echo -e "${CYAN}12. Seas of India${RESET}"
  echo -e "${CYAN}13. Nuclear Reactors of India${RESET}"
  echo -e "${CYAN}14. Satellites of India${RESET}"
  echo -e "${CYAN}15. Seasons of India${RESET}"
  echo -e "${RED}16. Exit${RESET}"
  echo "--------------------------------------------------"
}

# Function to handle menu choice
handle_choice() {
  case $1 in
    1)
      echo -e "${GREEN}Introduction of India:${RESET}"
      echo "India, officially the Republic of India, is a South Asian country with a population exceeding 1.4 billion."
      echo "Known for its diversity, India has a rich cultural heritage and vibrant history."
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    2)
      echo -e "${CYAN}States and Capitals of India:${RESET}"
      echo "India has 28 states and 8 Union Territories. Examples:"
      echo "Andhra Pradesh - Amaravati, Bihar - Patna, Karnataka - Bengaluru."
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    3)
      echo -e "${GREEN}National Symbol of India:${RESET}"
      echo "The national emblem is the Lion Capital of Ashoka, symbolizing power and courage."
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    4)
      echo -e "${CYAN}Presidents of India:${RESET}"
      echo "1. Dr. Rajendra Prasad (First President)"
      echo "2. Dr. Sarvepalli Radhakrishnan"
      echo "3. Pratibha Patil (First Female President)"
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    5)
      echo -e "${GREEN}Prime Ministers of India:${RESET}"
      echo "1. Jawaharlal Nehru (First Prime Minister)"
      echo "2. Indira Gandhi (First Female Prime Minister)"
      echo "3. Narendra Modi (Current Prime Minister)"
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    6)
      echo -e "${CYAN}Home Ministers of India:${RESET}"
      echo "1. Sardar Vallabhbhai Patel (First Home Minister)"
      echo "2. Amit Shah (Current Home Minister)"
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    7)
      echo -e "${GREEN}Mountains of India:${RESET}"
      echo "1. Kanchenjunga (Highest peak in India)"
      echo "2. Aravalli (Oldest mountain range)"
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    8)
      echo -e "${CYAN}Rivers of India:${RESET}"
      echo "1. Ganga (Longest and holiest river)"
      echo "2. Yamuna (Major tributary of Ganga)"
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    9)
      echo -e "${GREEN}Volcanoes of India:${RESET}"
      echo "1. Barren Island (Active volcano in Andaman and Nicobar)"
      echo "2. Narcondam (Dormant volcano)"
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    10)
      echo -e "${CYAN}Islands of India:${RESET}"
      echo "1. Andaman and Nicobar Islands"
      echo "2. Lakshadweep Islands"
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    11)
      echo -e "${GREEN}Oceans of India:${RESET}"
      echo "1. Indian Ocean"
      echo "2. Arabian Sea"
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    12)
      echo -e "${CYAN}Seas of India:${RESET}"
      echo "1. Andaman Sea"
      echo "2. Laccadive Sea"
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    13)
      echo -e "${GREEN}Nuclear Reactors of India:${RESET}"
      echo "1. Tarapur Atomic Power Station"
      echo "2. Kudankulam Nuclear Power Plant"
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    14)
      echo -e "${CYAN}Satellites of India:${RESET}"
      echo "1. Aryabhata (First Indian satellite)"
      echo "2. Mangalyaan (Mars Orbiter Mission)"
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    15)
      echo -e "${GREEN}Seasons of India:${RESET}"
      echo "1. Summer"
      echo "2. Monsoon"
      echo "3. Winter"
      echo "Press any key to go back to the main menu..."
      read -n 1
      ;;
    16)
      echo -e "${RED}Thank you! Exiting the program.${RESET}"
      exit 0
      ;;
    *)
      echo -e "${RED}Invalid option chosen! Please select a valid option.${RESET}"
      sleep 1  # Adds a slight delay before returning to the menu
      ;;
  esac
}

# Main script loop
while true; do
  display_menu
  read -p "Enter your choice: " choice
  handle_choice $choice
  echo
done

