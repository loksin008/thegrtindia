# Function to display States and Capitals of India
states_and_capitals() {
  while true; do
    echo "****************************************************"
    echo "            States and Capitals of India"
    echo "****************************************************"
    echo "1. Andhra Pradesh: Amaravati"
    echo "2. Arunachal Pradesh: Itanagar"
    echo "3. Assam: Dispur"
    echo "4. Bihar: Patna"
    echo "5. Chhattisgarh: Raipur"
    echo "6. Goa: Panaji"
    echo "7. Gujarat: Gandhinagar"
    echo "8. Haryana: Chandigarh"
    echo "9. Himachal Pradesh: Shimla"
    echo "10. Jharkhand: Ranchi"
    echo "11. Karnataka: Bengaluru"
    echo "12. Kerala: Thiruvananthapuram"
    echo "13. Madhya Pradesh: Bhopal"
    echo "14. Maharashtra: Mumbai"
    echo "15. Manipur: Imphal"
    echo "16. Meghalaya: Shillong"
    echo "17. Mizoram: Aizawl"
    echo "18. Nagaland: Kohima"
    echo "19. Odisha: Bhubaneswar"
    echo "20. Punjab: Chandigarh"
    echo "21. Rajasthan: Jaipur"
    echo "22. Sikkim: Gangtok"
    echo "23. Tamil Nadu: Chennai"
    echo "24. Telangana: Hyderabad"
    echo "25. Tripura: Agartala"
    echo "26. Uttar Pradesh: Lucknow"
    echo "27. Uttarakhand: Dehradun"
    echo "28. West Bengal: Kolkata"
    echo "****************************************************"
    echo "1. Back to Main Menu"
    read -p "Enter your choice [1]: " choice
    if [ "$choice" -eq 1 ]; then
      return
    else
      echo "Invalid choice! Please try again."
    fi
  done
}

# Main Menu
while true; do
  echo ""
  echo "****************************************************"
  echo "               Welcome to India Info"
  echo "****************************************************"
  echo "Please select an option:"
  echo "1. Introduction to India"
  echo "2. Rivers of India"
  echo "3. Mountains of India"
  echo "4. Volcanoes of India"
  echo "5. Prime Ministers of India"
  echo "6. Home Ministers of India"
  echo "7. Presidents of India"
  echo "8. States and Capitals of India"
  echo "9. Neighboring Countries of India"
  echo "10. Exit"
  echo "****************************************************"
  read -p "Enter your choice [1-10]: " choice

  case $choice in
    1) intro_india ;;
    2) rivers_of_india ;;
    3) mountains_of_india ;;
    4) volcanoes_of_india ;;
    5) prime_ministers_of_india ;;
    6) home_ministers_of_india ;;
    7) presidents_of_india ;;
    8) states_and_capitals ;;
    9) neighboring_countries_of_india ;;
    10) echo "Exiting... Goodbye!" ; break ;;
    *) echo "Invalid choice! Please select a valid option." ;;
  esac
done
